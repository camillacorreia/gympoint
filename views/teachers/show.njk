{% extends "layout.njk" %}

{% block content %}

    <div class="card">
        <section 
            class="avatar"
            style="background: url({{ teacher.avatar_url }}) no-repeat center center / cover">
        </section>
        
        <section class="details">
            <h3>Detalhes</h3>

            <div class="item">
                <div>Instrutor</div>
                <div>{{ teacher.name }}</div>
            </div>

            <div class="item">
                <div>Idade</div>
                <div>{{ teacher.age}}</div>
            </div>

            <div class="item">
                <div>Sexo</div>
                <div>{{ teacher.gender }}</div>
            </div>

            <div class="item">
                <div>Acompanhamento</div>
                <div>
                    {% for acting in teacher.actings %}
                    <span>{{ acting }}</span>
                    {% endfor %}
                </div>
            </div>

            <div class="item">
                <div>Desde</div>
                <div>{{ teacher.created_at }}</div>
            </div>
            
        </section>
    </div>

{% endblock content %}