{% extends "layout.njk" %}

{% block content %}

    <form class="card" method="post" action="/teachers?_method=put">
        <section 
            class="avatar"
            style="background: url({{ teacher.avatar_url }}) no-repeat center center / cover">
        </section>
        
        <section class="details">
            <h3>Editar instrutor</h3>

            {%  include 'teachers/fields.njk' %}

            <input
                type="hidden"
                name="id"
                value={{teacher.id}}
            >
            
        </section>
    </form>

{% endblock content %}