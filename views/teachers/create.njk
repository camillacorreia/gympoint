{% extends "layout.njk" %}

{% block content %}

    <form class="card" method="post" action="">
        <section 
            class="avatar"
            style="background: url(https://source.unsplash.com/collection/8969654/400) no-repeat center center / cover">
        </section>
        
        <section class="details">
            <h3>Novo instrutor</h3>

            <div class="item">
                <div>avatar URL</div>
                <div>
                    <input type="url" name="avatar_url" placeholder="http://">
                </div>
            </div>

            <div class="item">
                <div>Instrutor</div>
                <div>
                    <input type="name" name="name" placeholder="Nome do instrutor">
                </div>
            </div>

            <div class="item">
                <div>Data de nascimento</div>
                <div>
                    <input type="date" name="birth">
                </div>
            </div>

            <div class="item">
                <div>Sexo</div>
                <div>
                    <span><input type="radio" name="gender" value="Masculino">Masculino</span>
                    <span><input type="radio" name="gender" value="Feminino">Feminino</span>
                </div>
            </div>

            <div class="item">
                <div>Áreas de Atuação</div>
                <div>
                    <span><input type="checkbox" name="actings" value="Crossfit">Crossfit</span>
                    <span><input type="checkbox" name="actings" value="Musculação">Musculação</span>
                    <span><input type="checkbox" name="actings" value="Fitdance">Fitdance</span>
                    <span><input type="checkbox" name="actings" value="Zumba">Zumba</span>
                </div>
            </div>

            <button type="submit">Salvar</button>
            
        </section>
    </form>

{% endblock content %}